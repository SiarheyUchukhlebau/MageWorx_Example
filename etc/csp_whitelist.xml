<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="newrelic-scripts-wildcard" type="host">https://*.newrelic.com</value>
                <value id="newrelic-data-scripts-wildcard" type="host">https://*.nr-data.net</value>
                <value id="klarna-data-scripts-wildcard" type="host">https://*.klarnacdn.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="newrelic-connect-wildcard" type="host">https://*.newrelic.com</value>
                <value id="newrelic-data-connect-wildcard" type="host">https://*.nr-data.net</value>
                <value id="klarna-connect-wildcard" type="host">https://*.klarnacdn.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
